// Address Database Schema - FleetStack_Address
// Location and address-related tables

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma-address"
}

datasource db {
  provider = "postgresql"
  url      = env("ADDRESS_DATABASE_URL")
}




model Address2Digit {
  /// Rounded latitude (2 decimals)
  lat Decimal @db.Decimal(8, 2)

  /// Rounded longitude (2 decimals)
  lon Decimal @db.Decimal(9, 2)

  address String

  /// (lat, lon) together are unique â€“ no separate ID needed
  @@id([lat, lon])

  @@map("Address_2Digit")
}


model Address3Digit {
  /// Rounded latitude (3 decimals)
  lat Decimal @db.Decimal(8, 3)

  /// Rounded longitude (3 decimals)
  lon Decimal @db.Decimal(9, 3)

  address String

  /// (lat, lon) together are unique
  @@id([lat, lon])

  @@map("Address_3Digit")
}

